    <select id="getTeamsByStudentId" resultType="Long">
        SELECT pt.id
        FROM project_team pt
                 JOIN project_team_member ptm ON pt.id = ptm.team_id
        WHERE ptm.student_id = #{studentId}
    </select>


    <select id="getStudentIdByUserId" resultType="long">
        SELECT student_id FROM user WHERE id = #{userId}
