<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.virtuallab.auth.dao.UserRoleDao">
    
    <resultMap id="BaseResultMap" type="com.edu.virtuallab.auth.model.UserRole">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="role_id" property="roleId" jdbcType="BIGINT"/>
        <result column="department_id" property="departmentId" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="start_time" property="startTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
        <result column="reason" property="reason" jdbcType="VARCHAR"/>
        <result column="created_by" property="createdBy" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, role_id, department_id, status, start_time, end_time, created_by, create_time, update_time
    </sql>
    <!-- 根据用户ID查询用户角色 -->
    <select id="findByUserId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
        FROM user_role
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据角色ID查询用户角色 -->
    <select id="findByRoleId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
        FROM user_role
        WHERE role_id = #{roleId}
        ORDER BY create_time DESC
    </select>

    <!-- 根据用户ID和院系ID查询用户角色 -->
    <select id="findByUserIdAndDepartmentId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM user_role
        WHERE user_id = #{userId} AND department_id = #{departmentId}
        ORDER BY create_time DESC
    </select>

    <!-- 插入用户角色 -->
    <insert id="insert" parameterType="com.edu.virtuallab.auth.model.UserRole" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_role (
            user_id, role_id, create_time
        ) VALUES (
            #{userId}, #{roleId}, #{createTime}
        )
    </insert>

    <!-- 根据用户ID删除用户角色 -->
    <delete id="deleteByUserId" parameterType="java.lang.Long">
        DELETE FROM user_role WHERE user_id = #{userId}
    </delete>

    <!-- 根据角色ID删除用户角色 -->
    <delete id="deleteByRoleId" parameterType="java.lang.Long">
        DELETE FROM user_role WHERE role_id = #{roleId}
    </delete>

    <!-- 根据用户ID和角色ID删除用户角色 -->
    <delete id="deleteByUserIdAndRoleId">
        DELETE FROM user_role WHERE user_id = #{userId} AND role_id = #{roleId}
    </delete>




    <!-- 根据ID删除用户角色 -->
    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM user_role WHERE id = #{id}
    </delete>

</mapper> 