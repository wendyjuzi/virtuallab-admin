<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.virtuallab.auth.dao.RoleDao">

    <resultMap id="BaseResultMap" type="com.edu.virtuallab.auth.model.Role">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="code" property="code" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
        <result column="level" property="level" jdbcType="TINYINT"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="parent_id" property="parentId" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, code, description, type, level, status, parent_id, create_time, update_time
    </sql>

    <!-- 根据ID查询角色 -->
    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE id = #{id}
    </select>

    <!-- 根据名称查询角色 -->
    <select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE name = #{name}
    </select>

    <!-- 查询所有角色 -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        ORDER BY level ASC, create_time DESC
    </select>

    <!-- 根据编码查询角色 -->
    <select id="findByCode" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE code = #{code}
    </select>

    <!-- 根据类型查询角色 -->
    <select id="findByType" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE type = #{type}
        ORDER BY level ASC, create_time DESC
    </select>

    <!-- 根据级别查询角色 -->
    <select id="findByLevel" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE level = #{level}
        ORDER BY create_time DESC
    </select>

    <!-- 根据状态查询角色 -->
    <select id="findByStatus" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE status = #{status}
        ORDER BY level ASC, create_time DESC
    </select>

    <!-- 查询系统角色 -->
    <select id="findSystemRoles" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE type = 1
        ORDER BY level ASC, create_time DESC
    </select>

    <!-- 查询自定义角色 -->
    <select id="findCustomRoles" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE type = 2
        ORDER BY level ASC, create_time DESC
    </select>

    <!-- 根据父角色ID查询子角色 -->
    <select id="findByParentId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE parent_id = #{parentId}
        ORDER BY create_time DESC
    </select>

    <!-- 分页查询角色 -->
    <select id="findByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        ORDER BY level ASC, create_time DESC
        LIMIT #{offset}, #{limit}
    </select>

    <!-- 条件查询角色 -->
    <select id="findByCondition" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="code != null and code != ''">
                AND code LIKE CONCAT('%', #{code}, '%')
            </if>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY level ASC, create_time DESC
    </select>

    <!-- 查询用户的所有角色 -->
    <select id="findByUserId" resultMap="BaseResultMap" parameterType="java.lang.Long">
        SELECT r.id, r.name, r.code, r.description, r.type, r.level, r.status, r.parent_id, r.create_time, r.update_time
        FROM role r
        INNER JOIN user_role ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId} AND r.status = 1
        ORDER BY r.level ASC
    </select>

    <!-- 插入角色 -->
    <insert id="insert" parameterType="com.edu.virtuallab.auth.model.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO role (
            name, code, description, type, level, status, parent_id, create_time, update_time
        ) VALUES (
            #{name}, #{code}, #{description}, #{type}, #{level}, #{status}, #{parentId}, #{createTime}, #{updateTime}
        )
    </insert>

    <!-- 更新角色 -->
    <update id="update" parameterType="com.edu.virtuallab.auth.model.Role">
        UPDATE role
        SET name = #{name},
            code = #{code},
            description = #{description},
            type = #{type},
            level = #{level},
            status = #{status},
            parent_id = #{parentId},
            update_time = #{updateTime}
        WHERE id = #{id}
    </update>

    <!-- 删除角色 -->
    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM role WHERE id = #{id}
    </delete>

    <!-- 更新角色状态 -->
    <update id="updateStatus">
        UPDATE role
        SET status = #{status}, update_time = NOW()
        WHERE id = #{id}
    </update>

</mapper> 