    <!-- 更新实验项目 -->
    <update id="update" parameterType="com.edu.virtuallab.experiment.model.ExperimentProject">
        UPDATE experiment_project
        SET
            name = #{name},
            category = #{category},
            description = #{description},
            level = #{level},
            image_url = #{imageUrl},
            video_url = #{videoUrl},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除实验项目 -->
    <delete id="delete" parameterType="long">
        DELETE FROM experiment_project WHERE id = #{id}
    </delete>

    <!-- 根据ID查找 -->
    <select id="selectById" parameterType="long" resultType="com.edu.virtuallab.experiment.model.ExperimentProject">
        SELECT * FROM experiment_project WHERE id = #{id}
    </select>

    <!-- 查询全部 -->
    <select id="selectAll" resultType="com.edu.virtuallab.experiment.model.ExperimentProject">
        SELECT * FROM experiment_project
    </select>

    <!-- 多条件搜索 -->
    <select id="search" resultType="com.edu.virtuallab.experiment.model.ExperimentProject" parameterType="map">
        SELECT * FROM experiment_project
        WHERE 1=1
        <if test="category != null and category != ''">
            AND category = #{category}
        </if>
        <if test="level != null and level != ''">
            AND level = #{level}
        </if>
        <if test="keyword != null and keyword != ''">
            AND (name LIKE CONCAT('%', #{keyword}, '%') OR description LIKE CONCAT('%', #{keyword}, '%'))
        </if>
    </select>

    <!-- 插入实验项目：主键自动回填 -->
    <insert id="insert" parameterType="com.edu.virtuallab.experiment.model.ExperimentProject"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO experiment_project
        (name, category, description, level, image_url, video_url, collaboration_type, created_at, updated_at, created_by)
        VALUES
            (#{name}, #{category}, #{description}, #{level}, #{imageUrl}, #{videoUrl}, #{projectType}, NOW(), NOW(), #{createdBy})
    </insert>


    <select id="getProjectsByCreatedBy" resultType="com.edu.virtuallab.experiment.model.ExperimentProject">
        SELECT * FROM experiment_project
        WHERE created_by = #{createdBy}
    </select>

    <select id="listPage" resultType="com.edu.virtuallab.experiment.model.ExperimentProject">
        SELECT * FROM experiment_project
        WHERE 1=1
        <if test="category != null and category != ''">
            AND category = #{category}
        </if>
        <choose>
            <when test="sort == 'latest'">
                ORDER BY created_at DESC
            </when>
            <when test="sort == 'popular'">
                ORDER BY views DESC
            </when>
            <otherwise>
                ORDER BY id DESC
            </otherwise>
        </choose>
        LIMIT #{offset}, #{size}
    </select>
    <select id="countPage" resultType="long">
        SELECT COUNT(*) FROM experiment_project
        WHERE 1=1
        <if test="category != null and category != ''">
            AND category = #{category}
        </if>
    </select>
