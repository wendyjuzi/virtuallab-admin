<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.virtuallab.auth.dao.OperationLogDao">

    <resultMap id="BaseResultMap" type="com.edu.virtuallab.log.model.OperationLog">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="operation" property="operation" jdbcType="VARCHAR"/>
        <result column="module" property="module" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="request_method" property="requestMethod" jdbcType="VARCHAR"/>
        <result column="request_url" property="requestUrl" jdbcType="VARCHAR"/>
        <result column="request_params" property="requestParams" jdbcType="VARCHAR"/>
        <result column="response_result" property="responseResult" jdbcType="VARCHAR"/>
        <result column="ip_address" property="ipAddress" jdbcType="VARCHAR"/>
        <result column="user_agent" property="userAgent" jdbcType="VARCHAR"/>
        <result column="execution_time" property="executionTime" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="error_message" property="errorMessage" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, username, operation, module, description, request_method, request_url, 
        request_params, response_result, ip_address, user_agent, execution_time, status, 
        error_message, create_time
    </sql>

    <insert id="insert" parameterType="com.edu.virtuallab.log.model.OperationLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO operation_log (
            user_id, username, operation, module, description, request_method, request_url, 
            request_params, response_result, ip_address, user_agent, execution_time, status, 
            error_message, create_time
        ) VALUES (
            #{userId}, #{username}, #{operation}, #{module}, #{description}, #{requestMethod}, 
            #{requestUrl}, #{requestParams}, #{responseResult}, #{ipAddress}, #{userAgent}, 
            #{executionTime}, #{status}, #{errorMessage}, #{createTime}
        )
    </insert>

    <select id="findById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        WHERE id = #{id}
    </select>

    <select id="findByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        WHERE user_id = #{userId}
        ORDER BY create_time DESC
    </select>

    <select id="findByUsername" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        WHERE username = #{username}
        ORDER BY create_time DESC
    </select>

    <select id="findByOperation" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        WHERE operation = #{operation}
        ORDER BY create_time DESC
    </select>

    <select id="findByModule" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        WHERE module = #{module}
        ORDER BY create_time DESC
    </select>

    <select id="findByConditions" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="operation != null and operation != ''">
                AND operation = #{operation}
            </if>
            <if test="module != null and module != ''">
                AND module = #{module}
            </if>
            <if test="startTime != null and startTime != ''">
                AND create_time >= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{size}
    </select>

    <select id="countByConditions" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM operation_log
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="operation != null and operation != ''">
                AND operation = #{operation}
            </if>
            <if test="module != null and module != ''">
                AND module = #{module}
            </if>
            <if test="startTime != null and startTime != ''">
                AND create_time >= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
    </select>

    <select id="findByPage" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM operation_log
        ORDER BY create_time DESC
        LIMIT #{offset}, #{size}
    </select>

    <select id="count" resultType="java.lang.Integer">
        SELECT COUNT(*) FROM operation_log
    </select>

    <delete id="deleteByTimeBefore" parameterType="java.lang.String">
        DELETE FROM operation_log WHERE create_time &lt; #{time}
    </delete>

</mapper> 