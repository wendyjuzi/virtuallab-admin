<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.edu.virtuallab.experiment.dao.StudentClassDao">

    <!-- 查询某些班级中的所有学生ID -->
    <select id="findStudentIdsByClassIds" resultType="java.lang.Long" parameterType="java.util.List">
        SELECT DISTINCT student_id
        FROM student_class
        WHERE class_id IN
        <foreach item="id" collection="list" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 可选：插入一条 student_class 数据 -->
    <insert id="insert" parameterType="map">
        INSERT INTO student_class (student_id, class_id)
        VALUES (#{studentId}, #{classId})
    </insert>

    <!-- 可选：删除某个学生的所有班级记录 -->
    <delete id="deleteByStudentId" parameterType="long">
        DELETE FROM student_class WHERE student_id = #{studentId}
    </delete>

    <!-- 可选：根据学生 ID 查询其所有班级 ID -->
    <select id="findClassIdsByStudentId" resultType="java.lang.Long" parameterType="long">
        SELECT class_id
        FROM student_class
        WHERE student_id = #{studentId}
    </select>
    <select id="getAllClasses" resultType="com.edu.virtuallab.experiment.model.Clazz">
        SELECT id, name, department, major, grade
        FROM class
    </select>

    <select id="getStudentsByClassId" parameterType="long" resultType="com.edu.virtuallab.experiment.model.Student">
        SELECT student_id AS id
        FROM student_class
        WHERE class_id = #{classId}
    </select>
    <select id="countStudentClassRecords" resultType="int">
        SELECT COUNT(*) FROM student_class
    </select>

</mapper>
